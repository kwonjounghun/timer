{
  "name": "timer-monorepo",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev:web": "npm run dev --workspace=apps/web",
    "dev:desktop": "npm run dev --workspace=apps/desktop",
    "build:web": "npm run build --workspace=apps/web",
    "build:desktop": "npm run build --workspace=apps/desktop",
    "build:shared": "npm run build --workspace=packages/shared",
    "typecheck": "npm run typecheck --workspaces --if-present",
    "lint": "npm run lint --workspaces --if-present",
    "clean-duplicates": "npm run clean-duplicates --workspace=apps/web",
    "clean-duplicates:execute": "npm run clean-duplicates:execute --workspace=apps/web"
  },
  "devDependencies": {
    "typescript": "^5.2.2"
  }
}
